<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="body" prefHeight="550.0" prefWidth="900.0" style="-fx-background-color: #EEEEEE;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse.hardwaremanagementsystem.Controller.CategoryController">

    <!-- Title -->
    <Label layoutX="30.0" layoutY="20.0" text="Manage Categories">
        <font>
            <Font name="System Bold" size="22.0" />
        </font>
    </Label>

    <!-- TableView -->
    <TableView fx:id="tblCategories" layoutX="22.0" layoutY="65.0" prefHeight="470.0" prefWidth="580.0">

        <columns>
            <TableColumn fx:id="colCategoryId" prefWidth="180" text="Category ID" />
            <TableColumn fx:id="colItemId" prefWidth="180" text="Item ID" />
            <TableColumn fx:id="colCategoryName" prefWidth="220" text="Category Name" />
        </columns>

    </TableView>

    <!-- Right Panel -->
    <AnchorPane layoutX="611.0" layoutY="15.0" prefHeight="519.0" prefWidth="280.0" style="-fx-background-color: #BCC6CD;                        -fx-background-radius: 12;                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 15, 0.3, 0, 3);">

        <!-- Category ID -->
        <Label layoutX="17.0" layoutY="57.0" text="Category ID :">
            <font><Font size="14" /></font>
        </Label>
        <Label fx:id="lblCategoryId" layoutX="140.0" layoutY="56.0" text="C001">
            <font><Font name="System Bold" size="15.0" /></font>
        </Label>

        <!-- Item ID -->
        <Label layoutX="19.0" layoutY="92.0" text="Item ID">
            <font><Font size="14" /></font>
        </Label>
        <TextField fx:id="txtItemId" layoutX="19.0" layoutY="112.0" prefHeight="25.0" prefWidth="243.0" promptText="Item name " />

        <!-- Category Name -->
        <Label layoutX="19.0" layoutY="208.0" text="Category Name">
            <font><Font size="14" /></font>
        </Label>
        <TextField fx:id="txtCategoryName" layoutX="19.0" layoutY="228.0" prefHeight="25.0" prefWidth="243.0" promptText="Category name" />

        <!-- Buttons -->
        <Button fx:id="btnUpdate" layoutX="107.0" layoutY="269.0" onAction="#updateCat" opacity="0.49" prefHeight="25.0" prefWidth="73.0" style="-fx-background-color: #0573A8; -fx-text-fill: white; -fx-background-radius: 8;" text="Update">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>

        <Button fx:id="btnSave" layoutX="188.0" layoutY="269.0" onAction="#saveCat" opacity="0.75" prefHeight="25.0" prefWidth="73.0" style="-fx-background-color: #299676; -fx-text-fill: white; -fx-background-radius: 8;" text="Save">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>

        <Button fx:id="btnDelete" layoutX="27.0" layoutY="269.0" onAction="#deletecat" opacity="0.46" prefHeight="25.0" prefWidth="73.0" style="-fx-background-color: #B30000; -fx-text-fill: white; -fx-background-radius: 8;" text="Delete">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>

        <Button fx:id="btnReset" layoutX="26.0" layoutY="301.0" onAction="#resetCat" opacity="0.55" prefHeight="25.0" prefWidth="236.0" style="-fx-background-color: #BD9E75; -fx-text-fill: white; -fx-background-radius: 8;" text="Reset">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <ComboBox fx:id="comCatId" layoutX="19.0" layoutY="169.0" prefHeight="25.0" prefWidth="243.0" promptText="Category id" />
      <Label layoutX="19.0" layoutY="149.0" text="Category ID">
         <font>
            <Font size="14" />
         </font>
      </Label>
      <AnchorPane layoutX="8.0" layoutY="353.0" prefHeight="86.0" prefWidth="263.0" style="-fx-background-color: #A5A7A8; -fx-background-radius: 2;">
         <children>
            <Button layoutX="10.0" layoutY="14.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="243.0" style="-fx-background-color: #627398;" text="Genarate the All Details of Category" textFill="WHITE" />
            <Button layoutX="19.0" layoutY="44.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="112.0" style="-fx-background-color: #6A7EB0;" text="Get Category Report" textFill="WHITE">
               <font>
                  <Font size="10.0" />
               </font>
            </Button>
            <Button layoutX="133.0" layoutY="44.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="112.0" style="-fx-background-color: #6A7EB0;" text="Get Category Activity Report" textFill="WHITE">
               <font>
                  <Font size="10.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>

    </AnchorPane>

</AnchorPane>
